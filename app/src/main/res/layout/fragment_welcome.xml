<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/white_purple"
    android:gravity="center_horizontal"
    tools:context=".fragments.WelcomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="34sp"
            android:textColor="@color/colorPrimary"
            android:text="Welcome " />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Customer!"
            android:textSize="34sp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Use your fingerprint to pay"
        android:textColor="@color/colorGrey"
        android:textSize="20sp"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_fingerprint_purple"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/startPaymentButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_white_line"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="start payment"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:drawableEnd="@drawable/ic_fingerprint_white"
        android:layout_marginTop="100dp"/>


</LinearLayout>